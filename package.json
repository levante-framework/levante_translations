{
  "name": "levante-translations",
  "version": "1.0.0",
  "description": "Levante Translation Dashboard with validation storage",
  "type": "module",
  "scripts": {
    "deploy:levante-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -dev'",
    "deploy:levante-prod": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -prod'",
    "deploy:levante-dev-dry": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -dev --dry-run'",
    "deploy:levante-prod-dry": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -prod --dry-run'",
    "deploy:levante-dev-validate": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -dev --validate'",
    "deploy:levante-prod-validate": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_levante.py -prod --validate'",
    "deploy:web": "cd web-dashboard && npm run deploy",
    "deploy:web-dev": "cd web-dashboard && npm run deploy-dev",
    "deploy:crowdin-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/crowdin_to_gcs.py --bundle-id 18'",
    "deploy:crowdin-dry": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/crowdin_to_gcs.py --bundle-id 18 --dry-run'",
    "start:web": "cd web-dashboard && npm start",
    "fix:csv": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/fix_csv_newlines.py'",
    "export:voices": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/export_comprehensive_voices.py'",
    "export:female-voices": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/export_female_voices.py'",
    "crowdin:copy-lang": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/crowdin_copy_language.py \"$@\"' --",
    "setup:service-account-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/create_service_account.py --project-id \"$npm_config_project_id\"'",
    "setup:service-account-prod": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/create_service_account.py --project-id \"$npm_config_project_id\" --prod'",
    "setup:service-account-both": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/create_service_account.py --project-id \"$npm_config_project_id\" --both'",
    "generate:english": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 generate_speech.py English'",
    "generate:spanish": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 generate_speech.py Spanish'",
    "generate:german": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 generate_speech.py German'",
    "generate:german-switzerland": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 generate_speech.py \"German (Switzerland)\"'",
    "fetch:translations": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/fetch_latest_translations.py --force'",
    "fetch:translations-check": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/fetch_latest_translations.py --check-only'",
    "detect:languages": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/detect_new_languages.py'",
    "auto:add-languages": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 utilities/auto_add_languages.py'",
    "deploy:translations-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py dev'",
    "deploy:translations-prod": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py prod'",
    "deploy:translations-dev-dry": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py dev --dry-run'",
    "deploy:translations-prod-dry": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py prod --dry-run'",
    "deploy:translations-csv-only-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py dev --csv-only'",
    "deploy:translations-audio-only-dev": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py dev --audio-only'",
    "deploy:translations-dev-validate": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py dev --validate-core-tasks'",
    "deploy:translations-prod-validate": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 deploy_translations.py prod --validate-core-tasks'",
    "validate:core-tasks": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 validate_core_tasks.py'",
    "validate:core-tasks-quick": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 validate_core_tasks.py --quick'",
    "validate:core-tasks-interactive": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 validate_core_tasks.py --interactive'",
    "validate:core-tasks-single": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 validate_core_tasks_single.py'",
    "validate:core-tasks-list": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 validate_core_tasks_single.py --list'",
    "test:dry-run-all": "npm run deploy:levante-dev-dry && npm run deploy:crowdin-dry && npm run deploy:translations-dev-dry",
    "help": "echo \"Available commands:\n  deploy:translations-dev/prod - Deploy CSV + audio files\n  deploy:levante-dev/prod - Deploy Levante dashboard (CSV only)\n  deploy:web - Deploy web dashboard\n  deploy:crowdin-dev - Download from Crowdin\n  setup:service-account-* - Create Google Cloud service accounts\n  generate:english/spanish/german/german-switzerland - Generate audio\n  fetch:translations - Fetch latest translations from l10n_pending (auto maps identifierâ†’item_id)\n  fix:csv - Fix CSV formatting\n  export:voices - Export voice data\n  test:dry-run-all - Test all deployments\n\nTranslation Deployment Options:\n  npm run deploy:translations-dev - Deploy both CSV and audio to dev\n  npm run deploy:translations-dev-validate - Deploy + validate core-tasks\n  npm run deploy:translations-csv-only-dev - Deploy only CSV\n  npm run deploy:translations-audio-only-dev - Deploy only audio\n\nValidation Commands:\n  npm run validate:core-tasks - Run core-tasks Cypress tests\n  npm run validate:core-tasks-interactive - Run tests interactively\n\nTranslation Management:\n  npm run fetch:translations - Get latest translations from l10n_pending\n  npm run detect:languages - Detect new language columns\n\nService Account Setup:\n  npm run setup:service-account-dev --project_id=YOUR_PROJECT\n  npm run setup:service-account-both --project_id=YOUR_PROJECT\"",

    "venv:setup": "bash -lc 'python3 -m venv .venv && source .venv/bin/activate && python -m pip install --upgrade pip && pip install \"unbabel-comet>=2.2.0\" pandas openpyxl tqdm pyyaml requests huggingface_hub google-cloud-storage playsound==1.2.2 pyht elevenlabs mutagen'",
    "generate:speech": "bash -lc 'source .venv/bin/activate && python run_generate_speech.py'",

    "xcomet:setup": "bash -lc 'python3 -m venv .venv && source .venv/bin/activate && python -m pip install --upgrade pip && pip install \"unbabel-comet>=2.2.0\" pandas openpyxl tqdm pyyaml requests huggingface_hub google-cloud-storage pyht elevenlabs'",
    "xcomet:lang": "bash -lc 'source .venv/bin/activate && python xcomet/run_xcomet.py --lang $npm_config_lang --csv translation_master.csv --out_dir xcomet/output --use_api --allow_qe_fallback --gpu --matmul medium'",
    "xcomet:export": "bash -lc 'source .venv/bin/activate && python xcomet/export_excel.py --lang $npm_config_lang'",
    "xcomet:all": "bash -lc 'source .venv/bin/activate && python xcomet/run_all_and_export_excel.py --csv translation_master.csv --gpu --matmul medium'",
    "xcomet:all-remote": "bash -lc 'source .venv/bin/activate && python xcomet/run_all_and_export_excel.py --csv https://raw.githubusercontent.com/levante-framework/levante_translations/l10n_pending/item-bank-translations.csv --gpu --matmul medium'",
    "xcomet:all-fetched": "bash -lc 'source .venv/bin/activate && python xcomet/run_all_and_export_excel.py --csv translation_text/item_bank_translations.csv --gpu --matmul medium'",
    "seed:crowdin": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; python3 seed_crowdin_language.py \"$@\"' --"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}