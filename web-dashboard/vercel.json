{
  "version": 2,
  "functions": {
    "api/playht-proxy.js": {
      "maxDuration": 30
    },
    "api/elevenlabs-proxy.js": {
      "maxDuration": 30
    },
    "api/translate-proxy.js": {
      "maxDuration": 30
    },
    "api/read-tags.js": {
      "maxDuration": 30
    },
    "api/language-config.js": {
      "maxDuration": 30
    },
    "api/validation-storage.js": {
      "maxDuration": 30
    },
    "api/visual-audit.js": {
      "maxDuration": 60
    },
    "api/visual-fix.js": {
      "maxDuration": 60
    },
    "api/google-translate.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/proxy/elevenlabs/voices",
      "destination": "/api/elevenlabs-proxy"
    },
    {
      "source": "/proxy/elevenlabs/(.*)",
      "destination": "/api/elevenlabs-proxy?voice_id=$1"
    },
    {
      "source": "/proxy/translate",
      "destination": "/api/translate-proxy"
    },
    {
      "source": "/proxy/playht",
      "destination": "/api/playht-proxy"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
} 